<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3027.bustiketgenerate.MainActivity.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bus" />

        <TextView
            android:id="@+id/textViewDari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Dari" />

        <Spinner
            android:id="@+id/spinnerDari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Dari"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textViewTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tujuan" />

        <Spinner
            android:id="@+id/spinnertujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Tujuan"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Tiket" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="351dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/PP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="PP" />

            <RadioButton
                android:id="@+id/Satu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Satu arah" />
        </RadioGroup>

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:hint="Nama Penumpang" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Fasilitas (menambah biaya tambahan)" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBoxBiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:checked="false"
                android:text="Refund" />

            <CheckBox
                android:id="@+id/checkBoxWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checked="false"
                android:text="Asuransi" />

            <CheckBox
                android:id="@+id/checkBoxKursi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:checked="false"
                android:text="Kursi" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewtampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/buttonProses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Proses" />

    </LinearLayout>
</ScrollView>